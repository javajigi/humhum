<!DOCTYPE html>
<html>
	<head>
	  	<title>Humhum</title>
	  	<%= stylesheet_link_tag    "application", :media => "all" %>
	  	<%= javascript_include_tag "application" %>
	  	<%= csrf_meta_tags %>
	</head>

	<body background="/assets/overview.jpg">


		<a href="https://github.com/javajigi/humhum">
			<img id="github_ribbons" src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png" alt="Fork me on GitHub">
		</a>

		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">

					<a href="/musics" class="brand">HumHum</a>

					<div class="nav-collapse collapse">

						<div class="pull-right">

							<% if user_signed_in? %>
								
								<ul class="nav">
									<li class="dropdown">
										<a href="#" class="dropdown-toggle" data-toggle="dropdown">
											<%= current_user.username %>
											<span class="caret"></span>
										</a>
										<ul class="dropdown-menu">
											<li><%= link_to '계정 수정', edit_user_registration_path %></li>
											<li><%= link_to '로그아웃', destroy_user_session_path, :method => :delete %></li>
										</ul>
									</li>
								</ul>
							<% end %>

						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="container">
			<div class="row-fluid">
				<div class="span8">
					<%= yield %>
				</div>
				<div class="span4">
					<% if @friends %>	
						<% @friends.each do |friend| %>
						  <li><%= link_to friend.raw_attributes[:name], users_path(:identifier => friend.identifier), class: "btn btn-link" %>&nbsp;
						  	<a href="/users/follower?identifier=<%= friend.identifier %>">Follow</a>
						  </li>
						<% end %>
					<% end %>
					<br/>
					<% if user_signed_in? %>
					<a href="/users/<%= current_user.id %>/followers">Follower user</a>&nbsp;
					<a href="/users/<%= current_user.id %>/following">Following user</a>
					<% end %>
				</div>
			</div>
		</div>

		<div id="footer" class="container navbar-fixed-bottom">
			<div class="pull-right">
				<a href="http://nhnnext.org" class="btn btn-link">NHN NEXT 2013</a>
			</div>
		</div>

	</body>
</html>
