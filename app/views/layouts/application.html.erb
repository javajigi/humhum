<!DOCTYPE html>
<html>
	<head>
	  	<title>Humhum</title>
	  	<%= stylesheet_link_tag    "application", :media => "all" %>
	  	<%= javascript_include_tag "application" %>
	  	<%= csrf_meta_tags %>
	</head>

	<body>

		<a href="https://github.com/javajigi/humhum">
			<img id="github_ribbons" src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png" alt="Fork me on GitHub">
		</a>

		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">

					<a href="/" class="brand">HumHum</a>

					<div class="nav-collapse collapse">

						<div class="pull-right">
							<% if user_signed_in? %>

								<ul class="nav">
									<li class="dropdown">
										<a href="#" class="dropdown-toggle" data-toggle="dropdown">
											<%= current_user.email %>
											<span class="caret"></span>
										</a>
										<ul class="dropdown-menu">
											<li><%= link_to 'Edit registration', edit_user_registration_path %></li>
											<li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
										</ul>
									</li>
								</ul>

							<% else %>
								<%= form_for(resource, :html => {:class => "navbar-form"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>

									<%= f.email_field :email, class: "span2", placeholder: "Email" %>

									<%= f.password_field :password, class: "span2", placeholder: "Password" %>
	
									<%= f.submit "Sign in", class: "btn" %>
									
									<% if devise_mapping.rememberable? -%>
										<label class="checkbox muted"><%= f.check_box :remember_me %><%= f.label :remember_me %></label>
									<% end %>

								<% end %>
							<% end %>
						</div>

					</div>
				</div>
			</div>
		</div>

		<div class="container">
			<!--<p class="notice text-info"><%= notice %></p>
			<p class="alert text-warning"><%= alert %></p>-->

			<%= yield %>

			<div id="footer">
				<div class="pull-right">
					<p class="muted credit">2013<a href="http://nhnnext.org" class="btn btn-link">NHNNEXT</a></p>
				</div>
			</div>
		</div>
	</body>
</html>
