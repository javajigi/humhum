<%= form_for(@music) do |f| %>
  <% if @music.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@music.errors.count, "error") %> prohibited this music from being saved:</h2>

      <ul>
      <% @music.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <div style="float:right;">  
    <%= f.text_field :album_title,
     :placeholder => "음악 앨범 이름", :style => "width:180px;" %>
  </div>   
    <%= f.text_area :album_description,
     :placeholder => "음악 앨범 설명", :style => "width:500px;height:100px"%>
    
  <div style="float:left;">
    <span>음악&nbsp</span>
    <%= f.file_field :filename,
     :placeholder => "음악 파일 업로드 주소", :style => "width:150px;" %>
  </div>

  <div style="float:left;">
    <span>앨범사진&nbsp</span>
    <%= f.file_field :album_picture,
     :placeholder => "앨범 사진 업로드 주소", :style => "width:150px;" %>
  </div>
  <div style="float:right;">
     <button class="btn btn-primary" src=<%= f.submit %> 음악 업로드 </button>
  </div>
<% end %>
