<div class="form-horizontal">


  <%- if controller_name != 'sessions' %>
    <div class="control-group">
      <%= link_to "로그인", new_session_path(resource_name), class: "controls btn btn-link" %>
    </div>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="control-group">
      <%= link_to "회원가입", new_registration_path(resource_name), class: "controls btn btn-link" %>
    </div>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <div class="control-group">
      <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "controls btn btn-link" %>
    </div>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="control-group">
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "controls btn btn-link" %>
    </div>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="control-group">
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "controls btn btn-link" %>
    </div>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <div class="control-group">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "#{provider.to_s.titleize}으로 로그인", omniauth_authorize_path(resource_name, provider), class: "controls btn btn-link" %>
      <% end -%>
    </div>
  <% end -%>

</div>