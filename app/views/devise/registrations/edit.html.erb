<h2>계정 수정하기</h2>

<%= form_for(resource, :html => {:class => "form-horizontal", :method => :put}, :as => resource_name, :url =>registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>

	<div class="control-group">
	    <%= f.label "이름", class: "control-label" %> 
	    <div class="controls"><%= f.text_field :username %></div>
	</div>

	<div class="control-group">
	    <%= f.label "이메일 주소", class: "control-label" %> 
	    <div class="controls"><%= f.email_field :email %></div>
	</div>

	<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
	<% end %>

	<div class="control-group">
	    <%= f.label "현재 비밀번호", class: "control-label" %> 
	    <div class="controls"><%= f.password_field :current_password, :autofocus => true %></div>
	</div>
	<br />

	<div class="control-group">
	    <%= f.label "새 비밀번호", class: "control-label" %> 
		<div class="controls"><%= f.password_field :password %></div>
	</div>

	<div class="control-group">
		<%= f.label "비밀번호 확인", class: "control-label" %> 
		<div class="controls"><%= f.password_field :password_confirmation %></div>
	</div>

	<div class="control-group">
		<%= f.submit "계정 수정", class: "controls btn btn-primary" %>
	</div>

<% end %>

<h3>계정 삭제하기</h3>

<div class="form-horizontal">

	<div class="control-group">
		<h6 class="controls text-error">서비스에 불만족하십니까?</h6> 
	</div>
	
	<div class="control-group">
		<%= button_to "계정 삭제", registration_path(resource_name), class: "controls btn btn-danger", :data => { :confirm => "Are you sure?" }, :method => :delete %>
	</div>	
	
</div>


