
<h2>로그인</h2>
<%= form_for(resource, :html => {:class => "form-horizontal"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div class="control-group">
  	<%= f.label "이메일", class: "control-label" %> 
  	<div class="controls"><%= f.email_field :email, :autofocus => true %></div>
  </div>

  <div class="control-group">
  	<%= f.label "비밀번호", class: "control-label" %> 
  	<div class="controls"><%= f.password_field :password %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
  	<%= f.label "로그인 상태 유지", class: "control-label" %>
    <label class="controls"><%= f.check_box :remember_me %></label>
  <% end -%>
  <br />

  <div class="control-group">
  	<%= f.submit "로그인", class: "controls btn btn-primary" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>